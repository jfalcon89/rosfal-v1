                tipo: 'Normal',
                cartera: 'Cartera A',
                sucursal: 'ROSFAL SOLUCIONES DE PRESTAMOS',
                gastos_cierre: 100.00
            }, {
                id_prestamo: 1002,
                cliente_id: 502,
                idSolicitud: 202,
                tipo_plazo: 'Quincenal',
                plazo: 24,
                tasa: 20.50,
                apertura: new Date('2024-02-20T11:30:00'),
                mora_porcentaje: 3.50,
                primer_pago: '2024-03-05',
                monto_cuota: 650.00,
                desembolso: 8000.00,
                fecha_vencimiento: '2025-02-20',
                tipo: 'Legal',
                cartera: 'Cartera B',
                sucursal: 'Sucursal Central',
                gastos_cierre: 50.00
            }, {
                id_prestamo: 1003,
                cliente_id: 503,
                idSolicitud: 203,
                tipo_plazo: 'Mensual',
                plazo: 6,
                tasa: 15.00,
                apertura: new Date('2024-03-01T09:00:00'),
                mora_porcentaje: 1.50,
                primer_pago: '2024-04-01',
                monto_cuota: 2500.00,
                desembolso: 15000.00,
                fecha_vencimiento: '2024-09-01',
                tipo: 'Normal',
                cartera: 'Cartera A',
                sucursal: 'ROSFAL SOLUCIONES DE PRESTAMOS',
                gastos_cierre: 120.00
            },
            // ... más préstamos de ejemplo
        ];

        document.addEventListener('DOMContentLoaded', () => {
            const openReportBtn = document.getElementById('openReportBtn');
            if (openReportBtn) {
                openReportBtn.addEventListener('click', loadReportData);
            }

            // Simular la carga inicial (ocultar el modal)
            document.getElementById('reporteResultado').classList.add('hidden');
        });

        function loadReportData() {
            // 1. Recoger Parámetros de Búsqueda
            const params = {
                cartera: document.getElementById('checkCarteras').checked ? 'Todas' : document.getElementById('inputCartera').value.trim(),
                sucursal: document.getElementById('checkSucursales').checked ? 'Todas' : document.getElementById('inputSucursal').value.trim(),
                fechaCorte: document.getElementById('inputFechaCorte').value,
                tipo: document.getElementById('checkTipos').checked ? 'Todos' : (document.querySelector('input[name="radioTipo"]:checked') ? document.querySelector('input[name="radioTipo"]:checked').value : document.getElementById('inputTipo').value.trim() || 'Todos'),
            };

            // 2. Filtrar Datos (Lógica simulada)
            const filteredPrestamos = mockPrestamos.filter(prestamo => {
                const matchesCartera = params.cartera === 'Todas' || prestamo.cartera.includes(params.cartera);
                const matchesSucursal = params.sucursal === 'Todas' || prestamo.sucursal.includes(params.sucursal);
                const matchesTipo = params.tipo === 'Todos' || prestamo.tipo === params.tipo;

                // Lógica de fecha de corte es más compleja en el backend, aquí solo se filtran activos
                return matchesCartera && matchesSucursal && matchesTipo;
            });

            // 3. Renderizar Reporte
            renderReport(filteredPrestamos, params);

            // Mostrar el modal si estaba oculto
            document.getElementById('reporteResultado').classList.remove('hidden');
        }

        function renderReport(prestamos, params) {
            const tableBody = document.getElementById('reporteTableBody');
            const now = new Date();
            const formatter = new Intl.DateTimeFormat('es-ES', {
                dateStyle: 'short',
                timeStyle: 'short',
                hour12: false
            });

            // Actualizar fecha y hora de impresión
            document.getElementById('reportDate').textContent = now.toLocaleDateString('es-ES');
            document.getElementById('reportTime').textContent = now.toLocaleTimeString('es-ES', {
                hour12: true
            });

            // Actualizar parámetros de filtro en el reporte
            document.getElementById('paramCartera').textContent = params.cartera;
            document.getElementById('paramSucursal').textContent = params.sucursal;
            document.getElementById('paramTipoPrestamo').textContent = params.tipo;
            document.getElementById('cutOffDate').textContent = params.fechaCorte;


            // Vaciar la tabla antes de agregar nuevos datos
            tableBody.innerHTML = '';

            // Rellenar la tabla con los datos filtrados
            let totalDesembolso = 0;
            let sumaCuotas = 0;
            let sumaPlazos = 0;
            let sumaTasas = 0;
            let sumaMora = 0;
            let sumaGastosCierre = 0;

            if (prestamos.length > 0) {
                prestamos.forEach(prestamo => {
                    // Cálculo de totales
                    totalDesembolso += prestamo.desembolso;
                    sumaCuotas += prestamo.monto_cuota;
                    sumaPlazos += prestamo.plazo;
                    sumaTasas += prestamo.tasa;
                    sumaMora += prestamo.mora_porcentaje;
                    sumaGastosCierre += prestamo.gastos_cierre;

                    // Formato de fechas
                    const fechaApertura = new Date(prestamo.apertura).toLocaleDateString('es-ES', {
                        timeZone: "America/Santo_Domingo"
                    });

                    // Creación de la fila
                    const newRow = document.createElement('tr');
                    newRow.innerHTML = `
                    <td class="whitespace-nowrap">${prestamo.id_prestamo}</td>
                    <td class="whitespace-nowrap">${prestamo.cliente_id}</td>
                    <td class="whitespace-nowrap">${prestamo.idSolicitud}</td>
                    <td class="whitespace-nowrap">${prestamo.tipo_plazo}</td>
                    <td class="text-right whitespace-nowrap">${prestamo.plazo}</td>
                    <td class="text-right whitespace-nowrap">${prestamo.tasa.toFixed(2)}%</td>
                    <td class="text-right whitespace-nowrap">${fechaApertura}</td>
                    <td class="text-right whitespace-nowrap">${prestamo.mora_porcentaje.toFixed(2)}%</td>
                    <td class="text-right whitespace-nowrap">${prestamo.primer_pago}</td>
                    <td class="text-right whitespace-nowrap">${prestamo.monto_cuota.toFixed(2)}</td>
                    <td class="text-right whitespace-nowrap hidden sm:table-cell">${prestamo.desembolso.toFixed(2)}</td>
                    <td class="text-right whitespace-nowrap hidden sm:table-cell">${prestamo.fecha_vencimiento}</td>
                    <td class="w-0 text-center"><a href="/solicitudes/editar-solicitud/${prestamo.id_prestamo}" class="btn" title="Ver Préstamo"><i class="bi bi-eye"></i></a></td>
                `;
                    tableBody.appendChild(newRow);
                });
            } else {
                tableBody.innerHTML = '<tr><td colspan="13" class="text-center py-4 text-gray-500">No se encontraron préstamos que coincidan con los filtros.</td></tr>';
            }

            // 4. Actualizar Resumen de Totales
            const formatCurrency = (value) => new Intl.NumberFormat('es-DO', {
                style: 'currency',
                currency: 'DOP'
            }).format(value);
            const formatPercent = (value) => `${value.toFixed(2)}%`;

            document.getElementById('totalLoansCount').textContent = prestamos.length;
            document.getElementById('totalDesembolsadoValue').textContent = formatCurrency(totalDesembolso);
            document.getElementById('sumaCuotasValue').textContent = formatCurrency(sumaCuotas);
            document.getElementById('sumaPlazosValue').textContent = sumaPlazos;
            document.getElementById('sumaTasasValue').textContent = formatPercent(sumaTasas);
            document.getElementById('sumaMoraValue').textContent = formatPercent(sumaMora);
            document.getElementById('sumaGastosCierreValue').textContent = formatCurrency(sumaGastosCierre);
        }
