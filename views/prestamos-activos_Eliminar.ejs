    <script>
        // Datos de ejemplo para simular una respuesta de la base de datos
        const mockPrestamos = [{
                id_prestamo: 1001,
                cliente_id: 501,
                idSolicitud: 201,
                tipo_plazo: 'Mensual',
                plazo: 12,
                tasa: 18.00,
