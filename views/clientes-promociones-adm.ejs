    <link rel="stylesheet" href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/responsive/2.3.0/css/responsive.dataTables.min.css">
    <link rel="icon" href="/img/favicon/logo-favicon.png">
    <title>Rosfal - Promociones</title>
</head>

<body>

    <nav class="navbar navbar-expand-lg navbar-light  ">
        <div class="container-fluid  " style="background-color: #ececec;">

            <div class="d-flex">
                <img src="/img/LOGO-ROSFAL.png" alt="logo-rosfal" style="width: 80px;" class="me-2">
                <h5 class="text-dark m-2 d-flex align-items-center" style="font-size: large;">APP PROMOCIONES</h5>
            </div>
            <button class="navbar-toggler  " type="button" data-bs-toggle="offcanvas" data-bs-target="#navbarOffcanvas" aria-controls="navbarOffcanvas" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon "></span>
            </button>
            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <div class="offcanvas-body ">

                    <div class="d-flex">
                        <div class="btn-group ">
                            <button type="button" class="hola navbar-toggler d-block me-3" type="button" data-bs-toggle="offcanvas" data-bs-target="#navbarOffcanvas" aria-controls="navbarOffcanvas" aria-expanded="false" aria-label="Toggle navigation">
                                <span class="navbar-toggler-icon show "></span>
                            </button>
                            <i class="bi bi-person-square me-2" style="font-size: 40px;"></i>
                        </div>
                        <div class="user-container me-2 d-flex">
                            <% if (login) { %>
                                <div>
                                    <h4 type="" class="" style="color: #aeaeae;">
                                        <%= name %>
                                    </h4>
                                    <h6>
                                        <%= rol %>
                                    </h6>
                                </div>
                                <%}  %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </nav>

    <div class="offcanvas offcanvas-start" tabindex="-1" id="navbarOffcanvas" aria-labelledby="navbarOffcanvasLabel">
        <div class="offcanvas-header">
            <h5 class="offcanvas-title" id="navbarOffcanvasLabel">
                <h5 class="text-dark m-2" style="font-size: large;">PROMOCIONES</h5>
            </h5>
            <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body">
            <div class="user-container me-2 d-flex align-content-center" style="background-color: #ececec;">
                <% if (login) { %>
                    <i class="bi bi-person-square me-2" style="font-size: 40px;"></i>
                    <div>
                        <h4 type="" class="" style="color: #aeaeae;">
                            <%= name %>
                        </h4>
                        <h6>
                            <%= rol %>
                        </h6>
                    </div>
                    <%}  %>
            </div>
            <hr class="dropdown-divider">
            <%- include('template/navbar-menu') %>
        </div>
    </div>



    <div class=" p-2 d-lg-flex flex-sm-row mt-4 justify-content-md-between ">
        <div class="container-fluid d-flex mt-3 mb-3 me-lg-3 shadow-sm bg-white">
            <div class="container-nuevas d-flex">
                <div class="container-img m-2 me-lg-3">
                    <img style="width: 60px;" src="/img/app-clientes.png" alt="Clientes">
                </div>
                <div class="container-titulo">
                    <div class="indicador">
                        <h3>
                            <%=  %>
                        </h3>
                    </div>
                    <div class="titulo"><a class="text-decoration-none text-secondary fs-5" href="/promociones">Promociones</a></div>
                </div>
            </div>
        </div>
        <div class="container-fluid   d-flex mt-3 mb-3 me-lg-3 shadow-sm " style="background-color: #d4d4d4;">
            <div class="container-nuevas d-flex">
                <div class="container-img m-2 me-lg-3">
                    <img style="width: 60px;" src="/img/adm-usuarios.png" alt="Usuarios">
                </div>
                <div class="container-titulo">
                    <div class="indicador">
                        <h3>
                            <%=  %>
                        </h3>
                    </div>
                    <div class="titulo"><a class="text-decoration-none text-secondary fs-5" href="/clientes-promociones-adm">Clientes Promociones</a></div>
                </div>
            </div>
        </div>

    </div>


    <div class="container-fluid d-lg-flex">

        <div class="container-fluid p-4 mt-5 ">


            <h3 class="text-secondary"><strong>LISTADO</strong> PROMOCIONES POR CLIENTES</h3>
            <div class="d-flex">
                <div class="me-5">
                    <h3><strong>Creditos Clientes</strong></h3>
                    <p><strong>Aprobados</strong> <span><%= pagosPromociones[0].creditos_aprobado=Intl.NumberFormat('en-EN', { style: 'currency' , currency: 'USD' }).format(pagosPromociones[0].creditos_aprobado) %></span></p>
                    <p><strong>En Revision</strong> <span><%= pagosPromociones[0].creditos_en_revision=Intl.NumberFormat('en-EN', { style: 'currency' , currency: 'USD' }).format(pagosPromociones[0].creditos_en_revision) %></span></p>
                    <p><strong>Liquidados</strong> <span><%= pagosPromociones[0].creditos_liquidado=Intl.NumberFormat('en-EN', { style: 'currency' , currency: 'USD' }).format(pagosPromociones[0].creditos_liquidado) %></span></p>
                </div>
                <div>
                    <h3><strong>Debitos Rosfal</strong></h3>
                    <p><strong>Aprobados</strong> <span><%= pagosPromociones[0].debitos_aprobado=Intl.NumberFormat('en-EN', { style: 'currency' , currency: 'USD' }).format(pagosPromociones[0].debitos_aprobado) %></span></p>
                    <p><strong>En Revision</strong> <span><%= pagosPromociones[0].debitos_en_revision=Intl.NumberFormat('en-EN', { style: 'currency' , currency: 'USD' }).format(pagosPromociones[0].debitos_en_revision) %></span></p>
                    <p><strong>Liquidados</strong> <span><%= pagosPromociones[0].debitos_liquidado=Intl.NumberFormat('en-EN', { style: 'currency' , currency: 'USD' }).format(pagosPromociones[0].debitos_liquidado) %></span></p>
                </div>

            </div>
            <div class="container-fluid p-4">
                <div class="container-table table-responsive">
                    <table id="datatable" class="display responsive nowrap" style="width:100%">
                        <thead class="thead-ligth">
                            <tr>
                                <th scope="col">ID Promocion</th>
                                <th scope="col">Codigo Promocion</th>
                                <th scope="col">Valor Credito</th>
                                <th scope="col">Fecha Registro</th>
                                <th scope="col">Estado</th>
                                <th scope="col">Cliente ID</th>
                                <th scope="col">Origen Bonos</th>
                                <% if(rol == permiso_A){ %>
                                    <th scope="col">Acciones</th>
                                    <% } %>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (promocionesCliente.length > 0) { %>
                                <% promocionesCliente.forEach(promocion=> { %>
                                    <span class="d-none"><%= i++ %></span>
                                    <tr>
                                        <td>
                                            <%= promocion.id_promocion %>
                                        </td>
                                        <td>
                                            <%= promocion.codigo_promocion %>
                                        </td>
                                        <td>
                                            $
                                            <%= promocion.valor_credito %>
                                        </td>
                                        <td>
                                            <%= promocion.fecha_registro.toLocaleString('es-US', { timeZone: "America/Santo_Domingo"}) %>
                                        </td>
                                        <td>
                                            <% if(promocion.estado_promocion == 'Aprobado' ) { %>
                                                <i style="color: green;" class="bi bi-check-square-fill"></i>
                                                <%= promocion.estado_promocion  %>

                                                    <% }else { %>
                                                        <span style="color: #f85e5e;"><i class="bi bi-x-square-fill"></i> <%= promocion.estado_promocion  %></span>
                                                        <% } %>
                                        </td>
                                        <td>
                                            <%= promocion.cliente_id %>
                                        </td>
                                        <td>
                                            <% if(promocion.tipo_bono == 'Credito' ){ %>
                                                <span class="text-white bg-success p-1">Credito</span>
                                                <% }else{ %>
                                                    <span class="text-white bg-danger p-1">Debito</span>
                                                    <% } %>
                                                        <%= promocion.origen_bono %>
                                        </td>

                                        <% if(rol == permiso_A){ %>
                                            <td class="w-0 ">
                                                <a id="eventoAct-Inact" href="/clientes-promociones-adm/editar-promocion-cliente/<%= promocion.id_promocion %>" class="btn " title="Editar promocion" data-bs-toggle="modal" data-bs-target="#exampleModal3<%= i %>"><i class="bi bi-pencil-square "></i></a>
                                                <a id="eventoAct-Inact" href="/clientes-promociones/eliminar-promocion-cliente/<%= promocion.id_promocion %>" class="btn " title="Eliminar Promocion" data-bs-toggle="modal" data-bs-target="#exampleModal4<%= i %>"><i style="color: red;" class="bi bi-x-square-fill"></i></a>

                                                <% }%>

                                            </td>
                                    </tr>

                                    <!-- Modal editar promociones -->
                                    <div class="modal fade  mt-4" id="exampleModal3<%= i %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                        <div class="modal-dialog" role="document">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title" id="exampleModalLabel">Editar Promocion Cliente</h5>
                                                    <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                                                   <span aria-hidden="true">&times;</span>
                                                 </button>
                                                </div>
                                                <div class="modal-body">


                                                    <form action="/clientes-promociones-adm/editar-promocion-cliente/<%= promocion.id_promocion %>" method="POST" enctype="">
                                                        <!-- Campo para ingresar el ID del préstamo -->

                                                        <label for="codigo_promocion">Codigo Promocion</label>
                                                        <input class="form-control" type="text" value="<%= promocion.codigo_promocion %>" name="codigo_promocion">

                                                        <label for="valor_credito">Valor Credito</label>
                                                        <input class="form-control" type="number" value="<%= promocion.valor_credito %>" name="valor_credito">

                                                        <label for="origen_bono">Origen Bono</label>
                                                        <select name="origen_bono" class="form-control" id="origen_bono" required>
                                                         <option value="<%= promocion.origen_bono %>" selected><%= promocion.origen_bono %></option>
                                                         <% if (arrayUsuariosV.length > 0) { %>
                                                             <% arrayUsuariosV.forEach(usuario=> { %>
                                                                 <option value=<%= usuario.user %>><%= usuario.idUsuario %> <%= usuario.user %></option>
                                                         <% }) %>
                                                                     <% } %>
                                                                
                                                     </select>
                                                        <label for="estado_promocion">Estado</label>
                                                        <select name="estado_promocion" class="form-control" id="estado_promocion" required>
                                                         <option value="<%= promocion.estado_promocion %>" selected><%= promocion.estado_promocion %></option>
                                                         <option value="Aprobado">Aprobado</option>
                                                         <option value="En Revision">En Revision</option>
                                                         <option value="Liquidado">Liquidado</option>
                                                                                        
                                                     </select>
                                                        <br><br>


                                                        <div class="modal-footer">
                                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                                            <button type="submit" class="btn btn-success">Actualizar Promocion</button>
                                                        </div>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Modal Eliminar promociones -->
                                    <div class="modal fade  mt-4" id="exampleModal4<%= i %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                        <div class="modal-dialog" role="document">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title" id="exampleModalLabel">Editar Promocion Cliente</h5>
                                                    <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                                                   <span aria-hidden="true">&times;</span>
                                                 </button>
                                                </div>
                                                <div class="modal-body">


                                                    <form action="/clientes-promociones/eliminar-promocion-cliente/<%= promocion.id_promocion %>" method="" enctype="">
                                                        <!-- Campo para ingresar el ID del préstamo -->

                                                        <div class="d-flex justify-content-center">
                                                            <h4>
                                                                <%= promocion.codigo_promocion %>
                                                            </h4>
                                                        </div>

                                                        <div class="modal-footer">
                                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                                            <button type="submit" class="btn btn-success">Eliminar Promocion</button>
                                                        </div>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>


                                    <% }) %>
                                        <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- </div> -->
        </div>
    </div>



    <div style="padding-bottom: 10px;" class="d-flex justify-content-center w-100">
        <a href="/panel-administracion" style="text-align: center; color: #014c90; text-decoration: none;" type="submit" class=" p-2 w-100" id="btn-info"><i class="bi bi-arrow-left-circle me-2"></i>Regresar atras</a>
    </div>


    <script src="/js/rutasFunction.js"></script>


    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <% if (typeof alert !== "undefined") { %>
        <script>
            Swal.fire({
                title: "<%= alertTitle %>",
                text: "<%= alertMessage %>",
                icon: "<%= alertIcon %>",
                showConfirmButton: <%= showConfirmButton %>,
                timer: <%= timer %>
            }).then(() => {
                window.location.href = "<%= ruta %>";
            });
        </script>
        <% } %>


