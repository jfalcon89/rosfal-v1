    <div class=" p-2 d-lg-flex flex-sm-row mt-4 justify-content-md-between " style="background-color: #ececec;">
        <div class="container-fluid bg-white   d-flex mt-3 mb-3 me-lg-3 shadow-sm">
            <div class="container-nuevas d-flex">
                <div class="container-img m-2 me-lg-3">
                    <img style="width: 60px;" src="/img/img-icons/street-map-panel-administrativo.svg" alt="Rutas Creadas">
                </div>
                <div class="container-titulo">
                    <div class="indicador">
                        <h3>
                            <%= arrayRutas.length %>
                        </h3>
                    </div>
                    <div class="titulo"><a class="text-decoration-none text-secondary fs-5" href="/rutas">Rutas Creadas</a></div>
                </div>
            </div>
        </div>
        <div class="container-fluid bg-white d-flex mt-3 mb-3 me-lg-3 shadow-sm">
            <div class="container-nuevas d-flex">
                <div class="container-img m-2 me-lg-3">
                    <img style="width: 60px;" src="/img/img-icons/street-map-rutas.svg" alt="Crear Nueva Ruta">
                </div>
                <div class="container-titulo">
                    <div class="indicador">
                        <h3>
                            <%=  %>
                        </h3>
                    </div>
                    <div class="titulo"><a class="text-decoration-none text-secondary fs-5" href="/rutas/crear-ruta">Crear Nueva Ruta</a></div>
                </div>
            </div>
        </div>
        <!-- <div class="container-fluid bg-white  d-flex mt-3 mb-3 ">
            <div class="container-nuevas d-flex">
