    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/2.3.0/js/dataTables.responsive.min.js"></script>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/responsive/2.3.0/css/responsive.dataTables.min.css">
    <link rel="icon" href="/img/favicon/logo-favicon.png">
    <title>Rosfal - Editar Usuario App</title>
</head>


<body>

    <div class="whatsapp">
        <a class="btn-ws " href="https://bit.ly/4co7WFg" target="_blank"><img class="img-fluid" src="/img/logo-ws.png" alt="logo ws"></a>
    </div>

    <nav class="navbar navbar-expand-lg navbar-light  ">
        <div class="container-fluid  " style="">
            <div class="w-100 m-2 d-flex justify-content-between align-items-center">

                <a href="/panel-administracion">

                    <i class="bi bi-arrow-left fs-4"></i>
                </a>

                <div class="w-100 d-flex justify-content-center">

                    <p class="m-0">Promociones</p>
                </div>
            </div>

        </div>
    </nav>




    <div class=" p-2">

        <div style="border-radius: 15px; background-color: white;" class="container-fluid p-2 shadow">
            <h5 class="text-secondary text-center"><strong>HOLA, </strong>
                <% if (SolicitudesCliente.length > 0) { %>
                    <% SolicitudesCliente.forEach(SolicitudesCliente=> { %>
                        <% if(SolicitudesCliente.celular == usuario.user){ %>
                            <%= SolicitudesCliente.nombre %>
                                <% } %>
                                    <% }) %>
                                        <% }else{ %>
                                            <%= name %>
                                                <% } %>

            </h5>


            <div style="text-align: center;" class="mt-5">
                <h3><strong>Comparte tu codigo</strong></h3>
                <h5>Obten RD$250 pesos por cada persona que recomiendes a Rosfal. <br>La persona que recomiendes tambien recibira RD$250 pesos.</h5>

                <div class="mt-5">
                    <span><strong>Tu codigo es:</strong></span>
                    <h2>
                        <%= usuario.idUsuario %>00-PRIMERCREDITO</h2>
                </div>
            </div>
        </div>

        <div class="mt-5">
            <button style="border-radius: 20px;  width: 100%;" class="btn btn-success"><a class="dropdown-item text-white" target="_blank" href="https://wa.me/<%=  %>?text=
        
                        %0A*INVITACIÓN ESPECIAL A ROSFAL SOLUCIONES DE PRÉSTAMOS*%0A
                                    
                        %0AEstimad@ cliente, le han extendido una invitación especial para registrarse en Rosfal Soluciones de Préstamos.%0A
                                    
                        %0AUna vez completado su registro, obtendrás un descuento exclusivo y trato preferencial en su primer préstamo.%0A

                        %0A*Código de invitación:*
                        %0A<%= usuario.idUsuario %>00-PRIMERCREDITO%0A
                                    
                        %0A*Para más información:*
                        %0A*Email:* contacto@rosfal.com
                        %0A*WhatsApp:* 829 856-0203
                        %0A*Regístrese aquí:* https://www.rosfal.com/app-inicio
                                    
                        
                                    
                        ">Compatir mi codigo</a></button>
        </div>





        <form id="form-validacion" class="" autocomplete="off" action="" method="POST">
            <div class="d-lg-flex justify-content-center mt-3">
                <a style="border-radius: 20px;" id="btnGuardarDatos" class="btn btn-warning btn-block p-2 mt-1 mb-3 w-100 me-lg-3" type="" data-bs-toggle="modal" data-bs-target="#staticBackdrop2">CARGAR CODIGO PROMOCION</a>
            </div>

            <!-- Modal 2 -->
            <div class="modal fade" id="staticBackdrop2" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel2" aria-hidden="true">
                <div class="modal-dialog  modal-dialog-centered">

                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title text-center fw-bold" id="staticBackdropLabel2">Cargar codigo promocion</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <form id="form-validacion" class="" autocomplete="off" action="" method="POST">
                            <div class="modal-body">

                                <h5 class="text-center">
                                    <input style="text-transform:uppercase" class="form-control " type="text" name="codigo_promocion" value="" id="Contraseña" placeholder="" aria-describedby="codigo_promocion">

                                </h5>

                            </div>
                            <div class="modal-footer border-0">
                                <button id="btnGuardarDatos" class="btn btn-warning btn-block p-2 mt-1 mb-3 w-100 " type="submit">GUARDAR CODIGO</button>
                            </div>

                        </form>
                    </div>
                </div>
            </div>

        </form>

    </div>

    <div class="container-fluid  mt-3">
        <div class="container-fluid p-1">
            <h3 class="text-secondary"><strong>LISTADO</strong> DE PROMOCIONES</h3>
            <div class="container-fluid p-4">
                <div class="container-table table-responsive">
                    <table id="datatable" class="display responsive nowrap" style="width:100%">
                        <thead class="thead-ligth">
                            <tr>
                                <th scope="col">Promocion</th>
                                <th scope="col">Valor Acreditado</th>
                                <th scope="col">Fecha Registro</th>

                                <th scope="col">Origen Bono</th>
                                <th scope="col">Estado</th>

                            </tr>
                        </thead>
                        <tbody>
                            <% if (promocionesCliente.length > 0) { %>
                                <% promocionesCliente.forEach(promocion=> { %>
                                    <tr>
                                        <td>
                                            <%= promocion.codigo_promocion %>
                                        </td>
                                        <td>
                                            <%= promocion.valor_credito=Intl.NumberFormat('en-EN', { style: 'currency' , currency: 'USD' }).format(promocion.valor_credito) %>
                                        </td>
                                        <td>
                                            <%= promocion.fecha_registro.toLocaleString('es-US', { timeZone: "America/Santo_Domingo"}) %>
                                        </td>

                                        <td>
                                            <%= promocion.origen_bono %>
                                        </td>
                                        <td>
                                            <% if(promocion.estado_promocion == 'Aprobado' ) { %>
                                                <i style="color: green;" class="bi bi-check-square-fill"></i>
                                                <%= promocion.estado_promocion  %>

                                                    <% }else { %>
                                                        <span style="color: #f85e5e;"><i class="bi bi-x-square-fill"></i> <%= promocion.estado_promocion  %></span>
                                                        <% } %>
                                        </td>

                                    </tr>


                                    <% }) %>
                                        <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>



    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <% if (typeof alert !== "undefined") { %>
        <script>
            Swal.fire({
                title: "<%= alertTitle %>",
                text: "<%= alertMessage %>",
                icon: "<%= alertIcon %>",
                showConfirmButton: <%= showConfirmButton %>,
                timer: <%= timer %>
            }).then(() => {
                window.location.href = "<%= ruta %>";
            });
        </script>
        <% } %>


            <% if (rol == 'Cliente App'){ %>
                <div style="padding-bottom: 10px;" class="d-flex justify-content-center w-100">
                    <a href="/panel-administracion" style="text-align: center; color: #014c90; text-decoration: none;" type="submit" class=" p-2 w-100" id="btn-info"><i class="bi bi-arrow-left-circle me-2"></i>Regresar atras</a>
                </div>
                <% } %>



                    <script>
                        $(document).ready(function() {
                            $('#datatable').DataTable({
                                order: [
                                    [3, 'desc']
                                ],
                                language: {
                                    "decimal": "",
                                    "emptyTable": "No hay información",
                                    "info": "Mostrando _START_ a _END_ de _TOTAL_ Entradas",
                                    "infoEmpty": "Mostrando 0 to 0 of 0 Entradas",
                                    "infoFiltered": "(Filtrado de _MAX_ total entradas)",
                                    "infoPostFix": "",
                                    "thousands": ",",
                                    "lengthMenu": "Mostrar _MENU_ Entradas",
                                    "loadingRecords": "Cargando...",
                                    "processing": "Procesando...",
                                    "search": "Buscar:",
                                    "zeroRecords": "Sin resultados encontrados",
                                    "paginate": {
                                        "first": "Primero",
                                        "last": "Ultimo",
                                        "next": "Siguiente",
                                        "previous": "Anterior"
                                    }
                                }
                            });
                        });
                    </script>



</body>

</html>