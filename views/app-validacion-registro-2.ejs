    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>

    <!-- Script para habilitar/deshabilitar el botón "Registrarse" y validar la contraseña -->
    <script>
        document.getElementById('terminosCheck').addEventListener('change', function() {
            document.getElementById('btnConfirmacion').disabled = !this.checked;
        });

        // Validación de la contraseña
        function validarFormulario() {
            const password = document.getElementById('pass').value;
            const passwordHelp = document.getElementById('passwordHelp');
            const regex = /^.{8,}$/; // Requisitos: solo 8 caracteres mínimo

            if (!regex.test(password)) {
                passwordHelp.style.color = "red";
                Swal.fire({
                    title: 'Contraseña inválida',
                    text: 'Tu contraseña debe tener al menos 8 caracteres.',
                    icon: 'error',
                    confirmButtonText: 'Entendido'
                });
                return false;
            }
            return true;
        }
    </script>

    <% if (typeof alert != "undefined")  { %>
        <script>
            Swal.fire({
                title: '<%= alertTitle %>',
                text: '<%= alertMessage %>',
                icon: '<%= alertIcon %>',
                showConfirmButton: <%= showConfirmButton %>,
                timer: <%= timer %>
            }).then(() => {
                window.location = '/<%= ruta %>'
            })
        </script>
        <% } %>
