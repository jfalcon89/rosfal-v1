    <!-- DATATABLE -->
    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/2.3.0/js/dataTables.responsive.min.js"></script>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/responsive/2.3.0/css/responsive.dataTables.min.css">
    <link rel="icon" href="/img/favicon/logo-favicon.png">
    <title>Rosfal - Editar Usuario</title>
</head>


<body>

    <nav class="navbar navbar-expand-lg navbar-light ">
        <div class="container-fluid  " style="background-color: #ececec;">

            <div class="d-flex">
                <img src="/img/LOGO-ROSFAL.png" alt="logo-rosfal" style="width: 80px;" class="me-2">
                <h5 class="text-dark m-2 d-flex align-items-center" style="font-size: large;">USUARIOS</h5>
            </div>
            <button class="navbar-toggler  " type="button" data-bs-toggle="offcanvas" data-bs-target="#navbarOffcanvas" aria-controls="navbarOffcanvas" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon "></span>
            </button>
            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <div class="offcanvas-body ">

                    <div class="d-flex">
                        <div class="btn-group ">
                            <button type="button" class="hola navbar-toggler d-block me-3" type="button" data-bs-toggle="offcanvas" data-bs-target="#navbarOffcanvas" aria-controls="navbarOffcanvas" aria-expanded="false" aria-label="Toggle navigation">
                                <span class="navbar-toggler-icon show "></span>
                            </button>
                            <i class="bi bi-person-square me-2" style="font-size: 40px;"></i>
                        </div>
                        <div class="user-container me-2 d-flex">
                            <% if (login) { %>
                                <div>
                                    <h4 type="" class="" style="color: #aeaeae;">
                                        <%= name %>
                                    </h4>
                                    <h6>
                                        <%= rol %>
                                    </h6>
                                </div>
                                <%}  %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </nav>

    <div class="offcanvas offcanvas-start" tabindex="-1" id="navbarOffcanvas" aria-labelledby="navbarOffcanvasLabel">
        <div class="offcanvas-header">
            <h5 class="offcanvas-title" id="navbarOffcanvasLabel">
                <h5 class="text-dark m-2" style="font-size: large;">USUARIOS</h5>
            </h5>
            <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body">
            <div class="user-container me-2 d-flex align-content-center" style="background-color: #ececec;">
                <% if (login) { %>
                    <i class="bi bi-person-square me-2" style="font-size: 40px;"></i>
                    <div>
                        <h4 type="" class="" style="color: #aeaeae;">
                            <%= name %>
                        </h4>
                        <h6>
                            <%= rol %>
                        </h6>
                    </div>
                    <%}  %>
            </div>
            <hr class="dropdown-divider">
            <%- include('template/navbar-menu') %>
        </div>
    </div>

    <div class=" p-2 d-lg-flex flex-sm-row mt-4 justify-content-md-between " style="background-color: #ececec;">
        <div class="container-fluid bg-white d-flex mt-3 mb-3 me-lg-3 " style="background-color: #d4d4d4;">
            <div class="container-nuevas d-flex">
                <div class="container-img m-2 me-lg-3">
                    <img style="width: 60px;" src="/img/app-clientes.png" alt="Clientes">
                </div>
                <div class="container-titulo">
                    <div class="indicador">
                        <h3>
                            <%= arrayClientesV.length %>
                        </h3>
                    </div>
                    <div class="titulo"><a class="text-decoration-none text-secondary fs-5" href="/app-clientes">Clientes</a></div>
                </div>
            </div>
        </div>
        <div class="container-fluid   d-flex mt-3 mb-3 me-lg-3 shadow-sm " style="background-color: #d4d4d4;">
            <div class="container-nuevas d-flex">
                <div class="container-img m-2 me-lg-3">
                    <img style="width: 60px;" src="/img/adm-usuarios.png" alt="Usuarios">
                </div>
                <div class="container-titulo">
                    <div class="indicador">
                        <h3>
                            <%= arrayUsuariosV.length %>
                        </h3>
                    </div>
                    <div class="titulo"><a class="text-decoration-none text-secondary fs-5" href="/adm-usuarios">Usuarios</a></div>
                </div>
            </div>
        </div>
        <div class="container-fluid bg-white d-flex mt-3 mb-3 me-lg-3 shadow-sm" style="background-color: #d4d4d4;">
            <div class="container-nuevas d-flex">
                <div class="container-img m-2 me-lg-3">
                    <img style="width: 60px;" src="/img/agregar-usuario.png" alt="Crear Nuevo Usuario">
                </div>
                <div class="container-titulo">
                    <div class="indicador">
                        <h3>
                            <%=  %>
                        </h3>
                    </div>
                    <div class="titulo"><a class="text-decoration-none text-secondary fs-5" href="/adm-usuarios/crear-usuario">Crear Usuario</a></div>
                </div>
            </div>
        </div>
    </div>


    <div class="container-fluid d-lg-flex">
        <div class="container-fluid d-lg-flex">
            <div class="container-fluid p-4 mt-5 ">
                <h3 class="text-secondary"><strong>LISTADO</strong> USUARIOS</h3>
                <div class="container-fluid p-4">
                    <div class="container-table table-responsive">
                        <table id="datatable" class="display responsive nowrap" style="width:100%">
                            <thead class="thead-ligth">
                                <tr>
                                    <th scope="col">Usuario Id</th>
                                    <th scope="col">Identificacion Usuario</th>
                                    <th scope="col">Nombre Usuario</th>
                                    <th scope="col">Rol</th>
                                    <th scope="col">Fecha Creacion</th>
                                    <th scope="col">Estado</th>
                                    <th scope="col">Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (arrayUsuariosV.length > 0) { %>
                                    <% arrayUsuariosV.forEach(usuario=> { %>
                                        <tr>
                                            <td>
                                                <%= usuario.idUsuario %>
                                            </td>
                                            <td>
                                                <%= usuario.user %>
                                            </td>
                                            <td>
                                                <%= usuario.name %>
                                            </td>
                                            <td>
                                                <%= usuario.rol %>
                                            </td>
                                            <td>
                                                <%= usuario.fecha_creacion.toLocaleString('es-US', { timeZone: "America/Santo_Domingo"}) %>
                                            </td>
                                            <td>
                                                <%= usuario.estado_usuario %>
                                            </td>

                                            <td class="w-0 "><a id="eventoAct-Inact" href="/adm-usuarios/editar-usuario/<%= usuario.idUsuario %>" class="btn " title="Editar Usuario"><i class="bi bi-pencil-square "></i></a>
                                            </td>
                                        </tr>

                                        <% }) %>
                                            <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>



        <div class="container-fluid p-4 mt-5 ">
            <h3 class="text-secondary"><strong>EDITAR </strong> USUARIO</h3>
            <form id="form-validacion" class="" autocomplete="off" action="" method="POST">
                <div class="container bg-white mt-5 mb-5 pb-5 pt-5">
                    <h4><strong>Usuario ID </strong>
                        <%= usuario.idUsuario %>
                    </h4>
                    <% if(cliente) { %>
                        <div class=" d-lg-flex mb-3">
                            <div class="input-group-prepend">
                                <input class="form-control text-muted p-2" id="user" readonly value="Cliente ID: <%= cliente.cliente_id %> Registrado">
                            </div>

                        </div>
                        <% }else{ %>

                            <div class=" d-lg-flex mb-3">
                                <div class="input-group-prepend">
                                    <input class="form-control text-muted p-2" id="" readonly value="Cliente ID: No Registrado">
                                </div>

                            </div>

                            <% } %>
                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text" id="user">Ident. Usuario</span>
                                    </div>
                                    <input class="form-control text-muted" type="text" name="user" value="<%= usuario.user %>" id="user" placeholder="" aria-describedby="user">
                                </div>
                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text" id="name">Nombre Usuario</span>
                                    </div>
                                    <input class="form-control text-muted" type="text" name="name" value="<%= usuario.name %>" id="name" placeholder="" aria-describedby="user">
                                </div>

                                <div class="input-group mb-3">
                                    <div class="d-flex">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text" id="pass">Password</span>
                                        </div>
                                        <input class="form-control " type="password" name="" value="<%= usuario.pass %>" id="pass" placeholder="" aria-describedby="pass"><a class="btn btn-secondary  btn-sm" data-bs-toggle="modal" data-bs-target="#staticBackdrop2">CAMBIAR</a>
                                    </div>
                                </div>
                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text" id="estado_usuario">Estado</span>
                                    </div>
                                    <select class="form-control" name="estado_usuario" id="estado_usuario" aria-describedby="estado_usuario">
                            <option value="<%= usuario.estado_usuario %>" selected><%= usuario.estado_usuario %></option>
                            <option value="Activo" >Activo</option>
                            <option value="Inactivo">Inactivo</option>
                        </select>
                                </div>
                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text" id="rol">rol</span>
                                    </div>
                                    <select class="form-control" name="rol" id="rol" aria-describedby="rol">
                            <option value="<%= usuario.rol %>" selected><%= usuario.rol %></option>
                            <option value="Representante" >Representante</option>
                            <option value="Administrador">Administrador</option>
                        </select>

                                </div>
                                <div>
                                    <div class="d-lg-flex justify-content-center mt-3">
                                        <button id="btnGuardarDatos" class="btn btn-warning btn-block p-2 mt-1 mb-3 w-100 me-lg-3" type="submit">GUARDAR CAMBIOS</button>
                                        <a class="btn btn-danger btn-block p-2 mt-1 mb-3 w-100" data-bs-toggle="modal" data-bs-target="#staticBackdrop">ELIMINAR USUARIO</a>
                                    </div>
                                </div>
                </div>
            </form>
        </div>
    </div>
    <!-- Modal -->
    <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog  modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title text-center fw-bold" id="staticBackdropLabel">Eliminar Usuario</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">

                    <h5 class="text-center">
                        <%= usuario.user %>
                    </h5>

                </div>

                <div class=" d-lg-flex justify-content-center mt-3 p-3">
                    <button type="button" class="btn btn-secondary btn-block p-2 mt-1 mb-3 w-100 me-lg-3" data-bs-dismiss="modal">No</button>
                    <a href="/adm-usuarios/eliminar-usuario/<%= usuario.idUsuario %>" class="btn btn-danger btn-block p-2 mt-1 mb-3 w-100">Si Eliminar</a>
                </div>

            </div>
        </div>
    </div>
    </div>

    <!-- Modal 2 -->
    <div class="modal fade" id="staticBackdrop2" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel2" aria-hidden="true">
        <div class="modal-dialog  modal-dialog-centered">

            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title text-center fw-bold" id="staticBackdropLabel2">Actualizar contraseña</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form id="form-validacion" class="" autocomplete="off" action="" method="POST">
                    <div class="modal-body">

                        <h5 class="text-center">
                            <input class="form-control " type="password" name="pass" value="" id="Contraseña" placeholder="Password" aria-describedby="Contraseña">

                        </h5>

                    </div>
                    <div class="modal-footer border-0">
                        <button id="btnGuardarDatos" class="btn btn-warning btn-block p-2 mt-1 mb-3 w-100 " type="submit">CAMBIAR CONTRASEÑA</button>
                    </div>

                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
    <% if (typeof alert !="undefined" ) { %>
        <script>
            Swal.fire({
                title: '<%= alertTitle %>',
                text: '<%= alertMessage %>',
                icon: '<%= alertIcon %>',
                showConfirmButton: <%= showConfirmButton %>,
                timer: <%= timer %>
            }).then(() => {
                window.location = '/<%= ruta %>'
            })
        </script>
        <% } %>



            <div style="padding-bottom: 10px;" class="d-flex justify-content-center w-100">
                <a href="/panel-administracion" style="text-align: center; color: #014c90; text-decoration: none;" type="submit" class=" p-2 w-100" id="btn-info"><i class="bi bi-arrow-left-circle me-2"></i>Regresar atras</a>
            </div>


            <script>
                $(document).ready(function() {
                    $('#datatable').DataTable({
                        order: [
                            [0, 'desc']
                        ],
                        language: {
                            "decimal": "",
                            "emptyTable": "No hay información",
                            "info": "Mostrando _START_ a _END_ de _TOTAL_ Entradas",
                            "infoEmpty": "Mostrando 0 to 0 of 0 Entradas",
                            "infoFiltered": "(Filtrado de _MAX_ total entradas)",
                            "infoPostFix": "",
                            "thousands": ",",
                            "lengthMenu": "Mostrar _MENU_ Entradas",
                            "loadingRecords": "Cargando...",
                            "processing": "Procesando...",
                            "search": "Buscar:",
                            "zeroRecords": "Sin resultados encontrados",
                            "paginate": {
                                "first": "Primero",
                                "last": "Ultimo",
                                "next": "Siguiente",
                                "previous": "Anterior"
                            }
                        }
                    });
                });
            </script>



</body>

</html>