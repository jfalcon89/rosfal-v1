</head>

<body>



    <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container-fluid  " style="background-color: #ececec;">

            <div class="d-flex">
                <img src="/img/LOGO-ROSFAL.png" alt="logo-rosfal" style="width: 80px;" class="me-2">
                <h5 class="text-dark m-2 d-flex align-items-center" style="font-size: large;">CLIENTES</h5>
            </div>
            <button class="navbar-toggler  " type="button" data-bs-toggle="offcanvas" data-bs-target="#navbarOffcanvas" aria-controls="navbarOffcanvas" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon "></span>
            </button>
            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <div class="offcanvas-body ">

                    <div class="d-flex">
                        <div class="btn-group ">
                            <button type="button" class="hola navbar-toggler d-block me-3" type="button" data-bs-toggle="offcanvas" data-bs-target="#navbarOffcanvas" aria-controls="navbarOffcanvas" aria-expanded="false" aria-label="Toggle navigation">
                                <span class="navbar-toggler-icon show "></span>
                            </button>
                            <i class="bi bi-person-square me-2" style="font-size: 40px;"></i>
                        </div>
                        <div class="user-container me-2 d-flex">
                            <% if (login) { %>
                                <div>
                                    <h4 type="" class="" style="color: #aeaeae;">
                                        <%= name %>
                                    </h4>
                                    <h6>
                                        <%= rol %>
                                    </h6>
                                </div>
                                <%}  %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </nav>

    <div class="offcanvas offcanvas-start" tabindex="-1" id="navbarOffcanvas" aria-labelledby="navbarOffcanvasLabel">
        <div class="offcanvas-header">
            <h5 class="offcanvas-title" id="navbarOffcanvasLabel">
                <h5 class="text-dark m-2" style="font-size: large;">CLIENTES</h5>
            </h5>
            <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body">
            <div class="user-container me-2 d-flex align-content-center" style="background-color: #ececec;">
                <% if (login) { %>
                    <i class="bi bi-person-square me-2" style="font-size: 40px;"></i>
                    <div>
                        <h4 type="" class="" style="color: #aeaeae;">
                            <%= name %>
                        </h4>
                        <h6>
                            <%= rol %>
                        </h6>
                    </div>
                    <%}  %>
            </div>
            <hr class="dropdown-divider">
            <%- include('template/navbar-menu') %>
        </div>
    </div>

    <div class=" p-2 d-lg-flex flex-sm-row mt-4 justify-content-md-between " style="background-color: #ececec;">
        <div class="container-fluid  d-flex mt-3 mb-3 me-lg-3 " style="background-color: #d4d4d4;">
            <div class="container-nuevas d-flex">
                <div class="container-img m-2 me-lg-3">
                    <img style="width: 60px;" src="/img/app-clientes.png" alt="Clientes">
                </div>
                <div class="container-titulo">
                    <div class="indicador">
                        <h3>
                            <%= arrayClientesV.length %>
                        </h3>
                    </div>
                    <div class="titulo"><a class="text-decoration-none text-secondary fs-5" href="/app-clientes">Clientes</a></div>
                </div>
            </div>
        </div>
        <div class="container-fluid bg-white  d-flex mt-3 mb-3 me-lg-3 shadow-sm " style="background-color: #d4d4d4;">
            <div class="container-nuevas d-flex">
                <div class="container-img m-2 me-lg-3">
                    <img style="width: 60px;" src="/img/adm-usuarios.png" alt="Usuarios">
                </div>
                <div class="container-titulo">
                    <div class="indicador">
                        <h3>
                            <%= arrayUsuariosV.length %>
                        </h3>
                    </div>
                    <div class="titulo"><a class="text-decoration-none text-secondary fs-5" href="/adm-usuarios">Usuarios</a></div>
                </div>
            </div>
        </div>
        <div class="container-fluid bg-white d-flex mt-3 mb-3 me-lg-3 shadow-sm" style="background-color: #d4d4d4;">
            <div class="container-nuevas d-flex">
                <div class="container-img m-2 me-lg-3">
                    <img style="width: 60px;" src="/img/agregar-cliente.png" alt="Crear Nuevo Cliente">
                </div>
                <div class="container-titulo">
                    <div class="indicador">
                        <h3>
                            <%=  %>
                        </h3>
                    </div>
                    <div class="titulo"><a class="text-decoration-none text-secondary fs-5" href="/app-clientes/crear-cliente">Crear Cliente</a></div>
                </div>
            </div>
        </div>
    </div>


    <div class="container-fluid d-xxl-flex ">
        <div class="container-fluid d-flex">
            <!-- <div class="container-fluid container-todos-los-mensajes"> -->
            <div class="container-fluid p-4 mt-5 ">
                <h3 class="text-secondary"><strong>LISTADO</strong> CLIENTES</h3>
                <div class="container-fluid p-4">
                    <div class="container-table table-responsive">
                        <table id="datatable" class="display responsive nowrap" style="width:100%">
                            <thead class="thead-ligth">
                                <tr>
                                    <th scope="col">Cliente Id</th>
                                    <th scope="col">Telefono</th>
                                    <th scope="col">Token sms</th>
                                    <th scope="col">Ip_app_cliente</th>
                                    <th scope="col">Password</th>
                                    <th scope="col">Fecha Creacion</th>
                                    <th scope="col">Estado</th>
                                    <th scope="col">Origen</th>
                                    <th scope="col">Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (arrayClientesV.length > 0) { %>
                                    <% arrayClientesV.forEach(cliente=> { %>
                                        <tr>
                                            <td>
                                                <%= cliente.cliente_id %>
                                            </td>
                                            <td>
                                                <%= cliente.telefono %>
                                            </td>
                                            <td>
                                                <%= cliente.token_registro_sms %>
                                            </td>
                                            <td>
                                                <%= cliente.ip_app_cliente %>
                                            </td>
                                            <td>
                                                <%= cliente.pass %>
                                            </td>
                                            <td>
                                                <%= cliente.fecha_creacion.toLocaleString('es-US', { timeZone: "America/Santo_Domingo"}) %>
                                            </td>
                                            <td>
                                                <%= cliente.estado_cliente %>
                                            </td>
                                            <td>
                                                <%= cliente.origen %>
                                            </td>
                                            <td class="w-0 "><a id="eventoAct-Inact" href="/app-clientes/editar-cliente/<%= cliente.cliente_id %>" class="btn " title="Editar Cliente"><i class="bi bi-pencil-square "></i></a>
                                            </td>
                                        </tr>

                                        <% }) %>
                                            <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="">


            <div class="container-fluid p-4 mt-5 ">
                <h3 class="text-secondary"><strong>EDITAR </strong> CLIENTE</h3>
                <form id="form-validacion" class="" autocomplete="off" action="" method="POST">
                    <div class="container bg-white mt-5 mb-5 pb-5 pt-5">
                        <h4><strong>Cliente ID </strong>
                            <%= cliente.cliente_id %>
                        </h4>
                        <% if(user) { %>
                            <div class=" d-lg-flex mb-3">
                                <div class="input-group-prepend">
                                    <input class="form-control text-muted p-2" id="user" readonly value="Usuario ID: <%= user.idUsuario %>">
                                </div>
                                <div class="input-group-prepend">
                                    <input class="form-control text-muted p-2" id="user" readonly value="Rol: <%= user.rol %>">
                                </div>
                            </div>
                            <% }else{ %>

                                <div class=" d-lg-flex mb-3">
                                    <div class="input-group-prepend">
                                        <input class="form-control text-muted p-2" id="user" readonly value="Usuario ID: No Registrado">
                                    </div>

                                </div>

                                <% } %>
                                    <div class="input-group mb-3">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text" id="telefono">Telefono</span>
                                        </div>
                                        <input class="form-control text-muted" readonly type="number" name="telefono" value="<%= cliente.telefono %>" id="telefono" placeholder="" aria-describedby="telefono">
                                    </div>

                                    <div class="input-group mb-3">
                                        <div class="d-flex">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text" id="Contraseña">Contraseña</span>
                                            </div>
                                            <input class="form-control " type="password" name="" value="<%= cliente.pass %>" id="Contraseña" placeholder="" aria-describedby="Contraseña"><a class="btn btn-secondary  btn-sm" data-bs-toggle="modal" data-bs-target="#staticBackdrop2">CAMBIAR</a>
                                        </div>
                                    </div>
                                    <div class="input-group mb-3">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text" id="estado_cliente">Estado</span>
                                        </div>
                                        <select class="form-control" name="estado_cliente" id="estado_cliente" aria-describedby="estado_cliente">
                            <option value="<%= cliente.estado_cliente %>" selected><%= cliente.estado_cliente %></option>
                            <option value="Activo" >Activo</option>
                            <option value="Inactivo">Inactivo</option>
                        </select>
                                    </div>
                                    <div class="input-group mb-3">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text" id="origen">Origen</span>
                                        </div>
                                        <select class="form-control" name="origen" id="origen" aria-describedby="origen">
                                <option value="<%= cliente.origen %>" selected><%= cliente.origen %></option>
                                <option value="Movil App">Movil App</option>
                                <option value="Aplicacion Web">Aplicacion Web</option>
                            </select>
                                    </div>
                                    <div class="d-lg-flex justify-content-center mt-3">
                                        <button id="btnGuardarDatos" class="btn btn-warning btn-block p-2 mt-1 mb-3 w-100 me-lg-3" type="submit">GUARDAR CAMBIOS</button>
                                        <a class="btn btn-danger btn-block p-2 mt-1 mb-3 w-100" data-bs-toggle="modal" data-bs-target="#staticBackdrop">ELIMINAR CLIENTE</a>
                                    </div>
                    </div>
                </form>
            </div>

            <div class="container-fluid">
                <h3 class="text-secondary">Archivos Subidos Relacionados al cliente</h3>
                <table id="datatable2" class="display responsive nowrap" style="width:100%">
                    <thead class="thead-dark">
                        <tr>
                            <th>ID del Archivo</th>
                            <th>ID del Préstamo</th>
                            <th>Tipo Documento</th>
                            <th>Nombre del Archivo</th>
                            <th>Fecha de Subida</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody id="archivos-table-body">
                        <!-- Las filas de archivos se agregarán aquí dinámicamente -->
                        <% if (arrayArchivosCliente.length > 0) { %>
                            <% arrayArchivosCliente.forEach(archivo=> { %>

                                <tr>
                                    <td>
                                        <%= archivo.archivo_id %>
                                    </td>
                                    <td>
                                        <%= archivo.prestamo_id %>
                                    </td>
                                    <td>
                                        <%= archivo.tipo_documento %>
                                    </td>
                                    <td>
                                        <%= archivo.nombre_archivo %>
                                    </td>
                                    <td>
                                        <%= archivo.fecha_subida.toLocaleString('es-US', { timeZone: "America/Santo_Domingo"}) %>
                                    </td>
                                    <td>

                                        <a id="eventoAct-Inact" href="/download/<%= archivo.archivo_id %>" class="btn " title="descargar archivo"><i class="bi bi-folder2-open "></i></a>

                                    </td>

                                </tr>
                                <% }) %>
                                    <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog  modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title text-center fw-bold" id="staticBackdropLabel">Eliminar Cliente</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">

                    <h5 class="text-center">
                        <%= cliente.telefono %>
                    </h5>

                </div>

                <div class=" d-lg-flex justify-content-center mt-3 p-3">
                    <button type="button" class="btn btn-secondary btn-block p-2 mt-1 mb-3 w-100 me-lg-3" data-bs-dismiss="modal">No</button>
                    <a href="/app-clientes/eliminar-cliente/<%= cliente.cliente_id %>" class="btn btn-danger btn-block p-2 mt-1 mb-3 w-100">Si Eliminar</a>
                </div>

            </div>
        </div>
    </div>
    <!-- Modal 2 -->
    <div class="modal fade" id="staticBackdrop2" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel2" aria-hidden="true">
        <div class="modal-dialog  modal-dialog-centered">

            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title text-center fw-bold" id="staticBackdropLabel2">Actualizar contraseña</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form id="form-validacion" class="" autocomplete="off" action="" method="POST">
                    <div class="modal-body">

                        <h5 class="text-center">
                            <input class="form-control " type="password" name="pass" value="" id="Contraseña" placeholder="Password" aria-describedby="Contraseña">

                        </h5>

                    </div>
                    <div class="modal-footer border-0">
                        <button id="btnGuardarDatos" class="btn btn-warning btn-block p-2 mt-1 mb-3 w-100 " type="submit">CAMBIAR CONTRASEÑA</button>
                    </div>

                </form>
            </div>
        </div>
    </div>



    <div style="padding-bottom: 10px;" class="d-flex justify-content-center w-100">
        <a href="/panel-administracion" style="text-align: center; color: #014c90; text-decoration: none;" type="submit" class=" p-2 w-100" id="btn-info"><i class="bi bi-arrow-left-circle me-2"></i>Regresar atras</a>
    </div>



    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
    <% if (typeof alert !="undefined" ) { %>
        <script>
            Swal.fire({
                title: '<%= alertTitle %>',
                text: '<%= alertMessage %>',
                icon: '<%= alertIcon %>',
                showConfirmButton: <%= showConfirmButton %>,
                timer: <%= timer %>
            }).then(() => {
                window.location = '/<%= ruta %>'
            })
        </script>
        <% } %>




