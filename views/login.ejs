    <title>Login</title>
</head>

<body>
    <div class="login-form mt-5 bg-white">
        <DIv class="d-flex justify-content-center">
            <a class="navbar-brand " href="/"><img src="/img/LOGO-ROSFAL.png" style="width: 120px;" alt=""></a>
        </DIv>
        <h6 class="text-secondary d-flex justify-content-center">INICIAL SESSION</h6>
        <!-- <h1>ROSFAL v.1</h1> -->
        <form action="auth" method="POST">
            <input type="text" name="user" placeholder="User" autofocus required>
            <input type="password" name="pass" placeholder="Password" required>
            <input type="submit" class="btn-login" value="Login" style="background-color: #0B5495;">
        </form>
        <a href="register" class="btn-register justify-content-center d-flex" style="background-color: #6898c2;">Register</a>
        <a href="/">Regresar</a>



        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>

        <% if (typeof alert != "undefined")  { %>
            <script>
                Swal.fire({
                    title: '<%= alertTitle %>',
                    text: '<%= alertMessage %>',
                    icon: '<%= alertIcon %>',
                    showConfirmButton: <%= showConfirmButton %>,
                    timer: <%= timer %>
                }).then(() => {
                    window.location = '/<%= ruta %>'
                })
            </script>
            <% } %>
    </div>


</body>

</html>