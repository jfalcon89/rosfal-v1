</head>

<body>
    <div class="whatsapp">
        <a class="btn-ws " href="https://bit.ly/3xzs0RV" target="_blank"><img class="img-fluid" src="/img/logo-ws.png" alt="logo ws"></a>
    </div>
    <div style="border-radius: 15px;" class="login-form mt-5 bg-white">
        <DIv class="d-flex justify-content-center mb-4 ">
            <a class="" href="/"><img src="/img/LOGO-ROSFAL.png" style="width: 120px;" alt=""></a>
        </DIv>

        <!-- <h1>ROSFAL v.1</h1> -->
        <form action="auth" method="POST">
            <% if(device == 'Mobile'){ %>
                <input class="form-control" style="margin-bottom: 20px; border-radius: 5px" type="number" name="user" placeholder="Celular Registrado" autofocus required>
                <% }else{ %>
                    <input class="form-control" style="margin-bottom: 20px; border-radius: 5px" type="text" name="user" placeholder="Usuario o celular registrado" autofocus required>
                    <% } %>
                        <input class="form-control" style="margin-bottom: 20px; border-radius: 5px" type="Password" name="pass" placeholder="Password" required>

                        <input type="submit" class="btn btn-login" value="Iniciar Sesion" style="background-color: #014c90;">
        </form>

        <div class="d-flex justify-content-center w-100 mt-4">

            <a href="/app-update-pass" style="text-align: center; color: #014c90; text-decoration: none;" type="submit" class=" p-2 w-100" id="btn-info">Olvidar contrase√±a</a>
        </div>
        <div class="d-flex justify-content-center w-100">

            <a href="/" style="text-align: center; color: #014c90; text-decoration: none;" type="submit" class=" p-2 w-100" id="btn-info"><i class="bi bi-arrow-left-circle me-2"></i>Regresar</a>
        </div>



        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>

        <% if (typeof alert != "undefined")  { %>
            <script>
                Swal.fire({
                    title: '<%= alertTitle %>',
                    text: '<%= alertMessage %>',
                    icon: '<%= alertIcon %>',
                    showConfirmButton: <%= showConfirmButton %>,
                    timer: <%= timer %>
                }).then(() => {
                    window.location = '/<%= ruta %>'
                })
            </script>
            <% } %>
    </div>


</body>

</html>