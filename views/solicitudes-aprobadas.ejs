    <div class="offcanvas offcanvas-start" tabindex="-1" id="navbarOffcanvas" aria-labelledby="navbarOffcanvasLabel">
        <div class="offcanvas-header">
            <h5 class="offcanvas-title" id="navbarOffcanvasLabel">
                <h5 class="text-dark m-2" style="font-size: large;">SOLICITUDES</h5>
            </h5>
            <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body">
            <div class="user-container me-2 d-flex align-content-center" style="background-color: #ececec;">
                <% if (login) { %>
                    <i class="bi bi-person-square me-2" style="font-size: 40px;"></i>
                    <div>
                        <h4 type="" class="" style="color: #aeaeae;">
                            <%= name %>
                        </h4>
                        <h6>
                            <%= rol %>
                        </h6>
                    </div>
                    <%}  %>
            </div>
            <hr class="dropdown-divider">
            <%- include('template/navbar-menu') %>
        </div>
    </div>

    <div class=" p-2 d-lg-flex flex-sm-row mt-4 " style="background-color: #ececec;">
        <div class="container-fluid mt-3 mb-3 me-lg-3 d-flex bg-white">
            <div class="container-nuevas d-flex">
                <div class="container-img m-2 me-lg-3">
                    <img style="width: 60px;" src="/img/img-icons/img-nuevas-solicitudes.svg" alt="Solicitudes Nuevas">
                </div>
                <div class="container-titulo">
                    <div class="indicador">
                        <h3>
                            <%= arraySolicitudesNuevas.length %>
                        </h3>
                    </div>
                    <div class="titulo"><a class="text-decoration-none text-secondary fs-5" href="/solicitudes-nuevas">Solicitudes Nuevas</a></div>
                </div>
            </div>
        </div>
        <div class="container-fluid  mt-3 mb-3 me-lg-3 d-flex " style="background-color: #d4d4d4;">
            <div class="container-nuevas d-flex">
                <div class="container-img m-2 me-lg-3">
                    <img style="width: 60px;" src="/img/img-icons/img-solicitudes-aprobadas.svg" alt="Solicitudes Aprobadas">
                </div>
                <div class="container-titulo">
                    <div class="indicador">
                        <h3>
                            <%= arraySolicitudesAprobadas.length %>
                        </h3>
                    </div>
                    <div class="titulo"><a class="text-decoration-none text-secondary fs-5" href="/solicitudes-aprobadas">Solicitudes Aprobadas</a></div>
                </div>
            </div>
        </div>
        <div class="container-fluid bg-white mt-3 mb-3 me-lg-3 d-flex">
            <div class="container-nuevas d-flex">
                <div class="container-img m-2 me-lg-3">
                    <img style="width: 60px;" src="/img/img-icons/img-solicitudes-declinadas.svg" alt="Solicitudes Declinadas">
                </div>
                <div class="container-titulo">
                    <div class="indicador">
                        <h3>
                            <%= arraySolicitudesDeclinadas.length %>
                        </h3>
                    </div>
                    <div class="titulo"><a class="text-decoration-none text-secondary fs-5" href="/solicitudes-declinadas">Solicitudes Declinadas</a></div>
                </div>
            </div>
        </div>
        <div class="container-fluid bg-white mt-3 mb-3 me-lg-3 d-flex">
            <div class="container-nuevas d-flex">
                <div class="container-img m-2 me-lg-3">
                    <img style="width: 60px;" src="/img/img-icons/img-solicitudes-en-revision.svg" alt="Solicitudes en Revision">
                </div>
                <div class="container-titulo">
                    <div class="indicador">
                        <h3>
                            <%= arraySolicitudesEnRevision.length %>
                        </h3>
                    </div>
                    <div class="titulo"><a class="text-decoration-none text-secondary fs-5" href="/solicitudes-en-revision">Solicitudes en Revision</a></div>
                </div>
            </div>
        </div>
        <div class="container-fluid bg-white mt-3 mb-3 d-flex">
            <div class="container-nuevas d-flex">
                <div class="container-img m-2 me-lg-3">
                    <img style="width: 60px;" src="/img/img-icons/img-total-solicitudes.svg" alt="Solicitudes en Revision">
                </div>
                <div class="container-titulo">
                    <div class="indicador">
                        <h3>
                            <%= arrayTotalSolicitudes.length %>
                        </h3>
                    </div>
                    <div class="titulo"><a class="text-decoration-none text-secondary fs-5" href="/todas-las-solicitudes">Todas las Solicitudes</a></div>
                </div>
            </div>
        </div>


    </div>



    <div class="container-fluid p-4 mt-5">
        <h3 class="text-secondary">SOLICITUDES APROBADAS</h3>
        <div class="container-fluid p-4">
            <div class="container-table table-responsive">
                <table id="datatable" class="display responsive nowrap" style="width:100%">
                    <thead class="thead-ligth">
                        <tr>
                            <!-- <th scope="col">Id</th> -->
                            <th scope="col">ID Solicitud</th>
                            <th scope="col">Nombre</th>
                            <th scope="col">Apellido</th>
                            <th scope="col">Cedula</th>
                            <th scope="col">Fecha Solicitud</th>
                            <th scope="col">Monto Solicitud</th>
                            <th scope="col">Saldo Final</th>
                            <th scope="col">Tipo de Prestamo</th>
                            <th scope="col">Estatado solicitud</th>
                            <th scope="col">Clasificacion</th>
                            <th scope="col">Acciones</th>
                            <!-- <th scope="col">T. desc</th> -->
                            <!-- <th scope="col">Sueldo Neto</th> -->
                        </tr>
                    </thead>
                    <tbody>

                        <% if (arraySolicitudesAprobadas.length > 0) { %>
                            <% arraySolicitudesAprobadas.forEach(solicitud=> { %>

                                <tr>

                                    <td>
                                        <%= solicitud.idSolicitud %>
                                    </td>
                                    <td>
                                        <%= solicitud.nombre %>
                                    </td>
                                    <td>
                                        <%= solicitud.apellido %>
                                    </td>
                                    <td>
                                        <%= solicitud.cedula %>
                                    </td>
                                    <td>
                                        <%= solicitud.fechaSolicitud.toLocaleString('es-US', { timeZone: "America/Santo_Domingo"}) %>
                                    </td>
                                    <td>
                                        <%= solicitud.montoSolicitado %>
                                    </td>
                                    <td>
                                        <% if(solicitud.saldoFinal){ %>
                                            <span style="color: green;">
                                                <%= solicitud.saldoFinal %>
                                            </span>
                                            <% }else { %>
                                                <span style="color: rgb(200, 130, 0);">Pendiente</span>
                                                <% } %>
                                    </td>
                                    <td>
                                        <%= solicitud.tipoPrestamo %>
                                    </td>
                                    <td>
                                        <%= solicitud.estadoSolicitud %>
                                    </td>
                                    <td>
                                        <% if (solicitud.clasificacionCliente == 'Sin Clasificacion') { %>
                                            <p style="background-color: gray; color: white;">
                                                <%= solicitud.clasificacionCliente %>
                                            </p>
                                            <% } else if (solicitud.clasificacionCliente == 'A-Premium') { %>
                                                <p style="background-color: green; color: white;">
                                                    <%= solicitud.clasificacionCliente %>
                                                </p>
                                                <% } else if (solicitud.clasificacionCliente == 'B-Regular') { %>
                                                    <p style="background-color: yellow; color: black;">
                                                        <%= solicitud.clasificacionCliente %>
                                                    </p>
                                                    <% } else if (solicitud.clasificacionCliente == 'C-Riesgo') { %>
                                                        <p style="background-color: orange; color: black;">
                                                            <%= solicitud.clasificacionCliente %>
                                                        </p>
                                                        <% } else if (solicitud.clasificacionCliente == 'D-Desestimado') { %>
                                                            <p style="background-color: darkred; color: white;">
                                                                <%= solicitud.clasificacionCliente %>
                                                            </p>
                                                            <% } %>
                                    </td>

                                    <td class="w-0 "><a href="/solicitudes-aprobadas/editar-solicitud/<%= solicitud.idSolicitud %>" class="btn " title="Editar Solicitud"><i class="bi bi-pencil-square "></i></a>
                                        <a id="eventoAct-Inact" href="/solicitudes-aprobadas/ver-solicitud/<%= solicitud.idSolicitud %>" class="btn " title="Ver Solicitud"><i class="bi bi-folder2-open "></i></a>
                                        <a id="eventoAct-Inact" href="/solicitudes-aprobadas/imprimir-solicitud/<%= solicitud.idSolicitud %>" class="btn " title="Imprimir Solicitud"><i class="bi bi-printer "></i></a>
                                        <!-- <a class=" prueba btn  btn-block me-lg-3"><i class="bi bi-x-lg me-lg-3" title="Eliminar empleado"></i>a</a> -->
                                        <!-- <a href="/solicitudes-aprobadas/<%= solicitud.idSolicitud %>" type="submit" class=" btn  btn-block me-lg-3"><i class="bi bi-x-lg me-lg-3" title="Eliminar empleado"></i></a> -->


                                    </td>
                                </tr>

                                <% }) %>
                                    <% } %>

                    </tbody>
                </table>
            </div>
        </div>
    </div>


    <div style="padding-bottom: 10px;" class="d-flex justify-content-center w-100">
        <a href="/panel-administracion" style="text-align: center; color: #014c90; text-decoration: none;" type="submit" class=" p-2 w-100" id="btn-info"><i class="bi bi-arrow-left-circle me-2"></i>Regresar atras</a>
    </div>


    <script>
        $(document).ready(function() {
            $('#datatable').DataTable({
                order: [
                    [0, 'desc']
                ],
                language: {
                    "decimal": "",
                    "emptyTable": "No hay información",
                    "info": "Mostrando _START_ a _END_ de _TOTAL_ Entradas",
                    "infoEmpty": "Mostrando 0 to 0 of 0 Entradas",
                    "infoFiltered": "(Filtrado de _MAX_ total entradas)",
                    "infoPostFix": "",
                    "thousands": ",",
                    "lengthMenu": "Mostrar _MENU_ Entradas",
                    "loadingRecords": "Cargando...",
                    "processing": "Procesando...",
                    "search": "Buscar:",
                    "zeroRecords": "Sin resultados encontrados",
                    "paginate": {
                        "first": "Primero",
                        "last": "Ultimo",
                        "next": "Siguiente",
                        "previous": "Anterior"
                    }
                }
            });
        });
    </script>


</body>

</html>