                                <% if(rol == permiso_A){ %>
                                    <th scope="col">Acciones</th>
                                    <% } %>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (arrayClientesV.length > 0) { %>
                                <% arrayClientesV.forEach(cliente=> { %>
                                    <span class="d-none"><%= m++ %></span>
                                    <tr>
                                        <td>
                                            <%= cliente.cliente_id %>
                                        </td>
                                        <td>
                                            <%= cliente.telefono %>
                                        </td>
                                        <td>
                                            <% if(cliente.nombre_solicitud ) { %>
                                                <i style="color: green;" class="bi bi-check-square-fill"></i>
                                                <%= cliente.nombre_solicitud  %>
                                                    <%= cliente.apellido_solicitud  %>
                                                        <% }else { %>
                                                            <span style="color: #f85e5e;"><i class="bi bi-x-square-fill"></i> Cliente sin solicitud</span>
                                                            <% } %>
                                        </td>
                                        <td>
                                            <%= cliente.token_registro_sms %>
                                        </td>
                                        <td>
                                            <%= cliente.ip_app_cliente %>
                                        </td>
                                        <td>
                                            <%= cliente.fecha_creacion.toLocaleString('es-US', { timeZone: "America/Santo_Domingo"}) %>
                                        </td>
                                        <td>
                                            <% if(cliente.estado_cliente == 'Activo'){ %>
                                                <span style="background-color: green; color: white;"> <%= cliente.estado_cliente %></span>
                                                <%} else if(cliente.estado_cliente == 'No Aprobado'){ %>
                                                    <span class="bg-danger text-light"><%= cliente.estado_cliente %></span>
                                                    <% } %>
                                        </td>
                                        <td>
                                            <%= cliente.origen %>
                                        </td>
                                        <td>
                                            <% if(cliente.usuario > 0) { %>
                                                <i style="color: green;" class="bi bi-check-square-fill"></i> <span class="text-success"><%= cliente.usuario %></span>
                                                <% }else{ %>
                                                    <i style="color: red;" class="bi bi-x-square-fill"></i> <span class="text-danger">Usuario no Registrado</span>
                                                    <% } %>
                                        </td>
                                        <% if(rol == permiso_A){ %>
                                            <td class="w-0 ">
                                                <a id="eventoAct-Inact" href="/app-clientes/editar-cliente/<%= cliente.cliente_id %>" class="btn " data-bs-toggle="modal" data-bs-target="#modalEditarCliente<%= m %>" class="btn " title="Editar Cliente"><i class="bi bi-pencil-square "></i></a>

                                                <% }%>
                                            </td>
                                    </tr>

