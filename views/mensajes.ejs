<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- css y js bootstrap cdn -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- linkeado css propio -->
    <link rel="stylesheet" href="/css/style.css">
    <!-- icons bootstrap cdn -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.3/font/bootstrap-icons.css">
    <!-- generador de pdf cdn -->
    <!-- <script src="https://cdnjs.cloudflare.com/ajax/libs/html2pdf.js/0.10.1/html2pdf.bundle.min.js" integrity="sha512-GsLlZN/3F2ErC5ifS5QtgpiJtWd43JWSuIgh7mbzZ8zBps+dvLusV+eNQATqgA/HdeKFVgA5v3S/cIrLF7QnIg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script> -->
    <!-- moment.js cdn -->
    <!-- <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.3/moment-with-locales.min.js"></script>s -->
    <!-- DATATABLE -->
    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/2.3.0/js/dataTables.responsive.min.js"></script>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/responsive/2.3.0/css/responsive.dataTables.min.css">
    <link rel="icon" href="/img/favicon/logo-favicon.png">
    <title>Rosfal - Mensajes</title>
</head>

<body>




    <div class="container-fluid " style="background-color: #ececec;">
        <div class=" d-flex align-items-center justify-content-between">
            <div class="d-flex">
                <a class="bg-info text-decoration-none text-light p-2" href="/panel-administracion">VOLVER ATRAS</a>
                <h5 class="text-dark m-2" style="font-size: large;">PANEL DE MENSAJES</h5>
            </div>
            <div class="btn-group">
                <% if (login) { %>
                    <button type="button" class="btn btn-info"><%= name %></button>
                    <button type="button" class="btn btn-info dropdown-toggle dropdown-toggle-split" data-bs-toggle="dropdown" aria-expanded="false">
                        <span class="visually-hidden">Toggle Dropdown</span>
                    </button>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="#">Another action</a></li>
                        <li><a class="dropdown-item" href="/">Ir a ROSFAL PAGE</a></li>
                        <li>
                            <hr class="dropdown-divider">
                        </li>
                        <li><a class="dropdown-item" href="/logout">Cerrar Session</a></li>

                    </ul>
                    <%}  %>
            </div>

        </div>
    </div>



    <div class=" p-2 d-lg-flex flex-sm-row mt-4 justify-content-md-between " style="background-color: #ececec;">
        <div class="container-fluid   d-flex mt-3 mb-3 me-lg-3" style="background-color: #d4d4d4;">
            <div class="container-nuevas d-flex">
                <div class="container-img m-2 me-lg-3">
                    <img style="width: 60px;" src="/img/img-icons/img-nuevo-mensaje-inbox.svg" alt="Mensajes">
                </div>
                <div class="container-titulo">
                    <div class="indicador">
                        <h3>
                            <%= arrayMensajes.length %>
                        </h3>
                    </div>
                    <div class="titulo"><a class="text-decoration-none text-secondary fs-5" href="/mensajes">Mensajes Nuevos</a></div>
                </div>
            </div>
        </div>
        <div class="container-fluid bg-white   d-flex mt-3 mb-3 me-lg-3 ">
            <div class="container-nuevas d-flex">
                <div class="container-img m-2 me-lg-3">
                    <img style="width: 60px;" src="/img/img-icons/img-mensaje-no-leido.svg" alt="Mensajes no Leidos">
                </div>
                <div class="container-titulo">
                    <div class="indicador">
                        <h3>
                            <%= arrayMensajesNoLeidos.length %>
                        </h3>
                    </div>
                    <div class="titulo"><a class="text-decoration-none text-secondary fs-5" href="/mensajes-no-leidos">Mensajes No Leidos</a></div>
                </div>
            </div>
        </div>
        <div class="container-fluid bg-white  d-flex mt-3 mb-3 ">
            <div class="container-nuevas d-flex">
                <div class="container-img m-2 me-lg-3">
                    <img style="width: 60px;" src="/img/img-icons/img-mensaje-leido.svg" alt="Mensajes Leidos">
                </div>
                <div class="container-titulo">
                    <div class="indicador">
                        <h3>
                            <%= arrayMensajesLeidos.length %>
                        </h3>
                    </div>
                    <div class="titulo"><a class="text-decoration-none text-secondary fs-5" href="/mensajes-leidos">Mensajes Leidos</a></div>
                </div>
            </div>
        </div>



    </div>

    <!-- <h3>BANDEJA TODOS LOS MENSAJES</h3> -->
    <div class="container-fluid d-lg-flex">
        <div class="container-fluid p-4 mt-5 ">
            <h3 class="text-secondary"><strong>BANDEJA</strong> MENSAJES NUEVOS</h3>
            <div class="container-fluid p-4">
                <div class="container-table table-responsive">
                    <table id="datatable" class="display responsive nowrap" style="width:100%">
                        <thead class="thead-ligth">
                            <tr>
                                <!-- <th scope="col">Id</th> -->
                                <th scope="col">ID Mensaje</th>
                                <th scope="col">Nombre</th>
                                <th scope="col">Telefono</th>
                                <!-- <th scope="col">Email</th> -->
                                <th scope="col">Fecha del Mensaje</th>
                                <th scope="col">Estado Mensaje</th>
                                <!-- <th scope="col">Estatado solicitud</th> -->
                                <!-- <th scope="col">T. desc</th> -->
                                <!-- <th scope="col">Sueldo Neto</th> -->
                                <th scope="col">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>

                            <% if (arrayMensajes.length > 0) { %>
                                <% arrayMensajes.forEach(mensaje=> { %>

                                    <tr>

                                        <td>
                                            <%= mensaje.idMensaje %>
                                        </td>
                                        <td>
                                            <%= mensaje.nombre %>
                                        </td>
                                        <td>
                                            <%= mensaje.telefono %>
                                        </td>
                                        <td>
                                            <%= mensaje.fechaMensaje.toLocaleString() %>
                                        </td>
                                        <td>
                                            <%= mensaje.estadoMensaje %>
                                        </td>

                                        <td class=""><a id="eventoAct-Inact" href="/mensajes/ver-mensaje/<%= mensaje.idMensaje %>" class="btn " title="Ver Solicitud"><i class="bi bi-folder2-open "></i></a>
                                            <!-- <a id="eventoAct-Inact" href="/mensajes/ver-mensaje/<%=  %>" class="btn " title="Ver Solicitud"><i class="bi bi-folder2-open "></i></a> -->
                                            <a href="/mensajes/<%= mensaje.idMensaje %>" type="submit" class=" btn me-lg-3"><i class="bi bi-x-lg me-lg-3" title="Eliminar empleado"></i></a>
                                        </td>
                                    </tr>

                                    <% }) %>
                                        <% } %>

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="container-fluid p-4 mt-5 d-flex justify-content-center ">
            <div>
                <h3 class="text-secondary">NINGUN MENSAJE SELECCIONADO</h3>
                <img style="width: 200px;" src="/img/img-icons/img-mensajes-no-select.svg" alt="">
            </div>


        </div>
    </div>






    <script>
        $(document).ready(function() {
            $('#datatable').DataTable({
                order: [
                    [0, 'desc']
                ],
                language: {
                    "decimal": "",
                    "emptyTable": "No hay informaci√≥n",
                    "info": "Mostrando _START_ a _END_ de _TOTAL_ Entradas",
                    "infoEmpty": "Mostrando 0 to 0 of 0 Entradas",
                    "infoFiltered": "(Filtrado de _MAX_ total entradas)",
                    "infoPostFix": "",
                    "thousands": ",",
                    "lengthMenu": "Mostrar _MENU_ Entradas",
                    "loadingRecords": "Cargando...",
                    "processing": "Procesando...",
                    "search": "Buscar:",
                    "zeroRecords": "Sin resultados encontrados",
                    "paginate": {
                        "first": "Primero",
                        "last": "Ultimo",
                        "next": "Siguiente",
                        "previous": "Anterior"
                    }
                }
            });
        });
    </script>



</body>

</html>