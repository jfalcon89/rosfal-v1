    <script>
        // Función auxiliar para simular la demora de red/procesamiento
        const delay = ms => new Promise(resolve => setTimeout(resolve, ms));

        // Formatear un número a moneda (DOP - Peso Dominicano)
        const formatCurrency = (amount) => {
            // Asegurarse de que el monto es un número antes de formatear
            const numAmount = parseFloat(amount);
            if (isNaN(numAmount)) return 'DOP 0.00';

            return new Intl.NumberFormat('es-DO', {
                style: 'currency',
                currency: 'DOP',
                minimumFractionDigits: 2,
            }).format(numAmount);
        };

        // Obtener elementos del DOM
        const form = document.getElementById('reporteForm');
        const modal = document.getElementById('reporteResultadoModal');
        const reportContent = document.getElementById('reporteContent');
        const loadingIndicator = document.getElementById('loadingIndicator');
        const tableBody = document.getElementById('reporteTableBody');
        const closeBtn = document.getElementById('closeReportBtn');

        // Función para mostrar el modal
        const openModal = () => {
            modal.classList.add('open');
        };

        // Función para ocultar el modal
        const closeModal = () => {
            modal.classList.remove('open');
        };

        // Event Listeners
        form.addEventListener('submit', handleProcessReport);
        closeBtn.addEventListener('click', closeModal);

        /**
         * Maneja el envío del formulario, llama a la API del servidor y genera el reporte.
         */
        async function handleProcessReport(event) {
            event.preventDefault();
            openModal();

            // 1. Mostrar el indicador de carga y ocultar el contenido
            reportContent.classList.add('hidden');
            loadingIndicator.classList.remove('hidden');

            // 2. Obtener los valores del formulario
            const params = {
                cartera: document.getElementById('inputCartera').value,
                incluirTodasCarteras: document.getElementById('checkCarteras').checked,
                sucursal: document.getElementById('inputSucursal').value,
                incluirTodasSucursales: document.getElementById('checkSucursales').checked,
                fechaCorte: document.getElementById('inputFechaCorte').value,
                tipo: document.getElementById('inputTipo').value, // En la BD es el campo 'tipo'
                incluirTodosTipos: document.getElementById('checkTipos').checked,
                radioTipo: document.querySelector('input[name="radioTipo"]:checked').value // Estado: Normal, Legal, Incobrable, Todos
            };

            let data = [];

            try {
                // 3. Realizar la solicitud POST al endpoint del servidor
                const response = await fetch('/api/prestamos-reportes-filtrados', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(params),
                });

                if (!response.ok) {
                    throw new Error(`Error en el servidor: ${response.statusText}`);
                }

                const result = await response.json();

                if (result.success) {
                    data = result.data; // Los datos de los préstamos
                } else {
                    console.error("Error al obtener datos del reporte:", result.message);
                    alert(`Error al generar reporte: ${result.message}`);
                }

            } catch (error) {
                console.error("Error de conexión:", error);
                alert('Hubo un error de conexión con el servidor. Intente de nuevo.');
            }

            // 4. Generar el reporte con los datos recibidos (o vacíos si hubo error)
            generateReport(params, data);

            // 5. Ocultar el indicador de carga y mostrar el contenido del reporte
            loadingIndicator.classList.add('hidden');
            reportContent.classList.remove('hidden');
        }

        /**
         * Rellena el modal del reporte con los datos y cálculos.
         * @param {object} params - Parámetros de filtro del formulario.
         * @param {Array<object>} data - Datos filtrados del reporte del servidor.
         */
        function generateReport(params, data) {
            // ** 1. Rellenar la Cabecera del Reporte (Fecha y Hora) **
            const now = new Date();
            const dateStr = now.toLocaleDateString('es-DO');
            const timeStr = now.toLocaleTimeString('es-DO');

            document.getElementById('reportDate').textContent = dateStr;
            document.getElementById('reportTime').textContent = timeStr;

            // ** 2. Rellenar los Parámetros Aplicados **
            document.getElementById('paramCartera').textContent = params.incluirTodasCarteras ? 'TODAS' : params.cartera;
            document.getElementById('paramSucursal').textContent = params.incluirTodasSucursales ? 'TODAS' : params.sucursal;
            document.getElementById('paramTipoPrestamo').textContent = params.radioTipo;
            document.getElementById('cutOffDate').textContent = new Date(params.fechaCorte).toLocaleDateString('es-DO');

            // ** 3. Rellenar la Tabla de Préstamos (Cuerpo) y Calcular Totales **
            tableBody.innerHTML = '';
            let totalDesembolsado = 0;
            let sumaCuotas = 0;
            let sumaPlazos = 0;
            let sumaTasas = 0;
            let sumaMora = 0;
            let sumaGastosCierre = 0;

            data.forEach(item => {
                // Acumular totales (usando los nombres de columna de la BD)
                const desembolso = parseFloat(item.desembolso) || 0;
                const montoCuota = parseFloat(item.monto_cuota) || 0;
                const plazo = parseInt(item.plazo) || 0;
                const tasa = parseFloat(item.tasa) || 0;
                const moraPorcentaje = parseFloat(item.mora_porcentaje) || 0;
                const gastosCierre = parseFloat(item.gastos_cierre) || 0;

                totalDesembolsado += desembolso;
                sumaCuotas += montoCuota;
                sumaPlazos += plazo;
                sumaTasas += tasa;
                sumaMora += moraPorcentaje;
                sumaGastosCierre += gastosCierre;

                // Crear fila de la tabla
                const row = `
                    <tr>
                        <td class="whitespace-nowrap">${item.id_prestamo}</td>
                        <td class="whitespace-nowrap">${item.cliente_id}</td>
                        <td class="whitespace-nowrap">${item.idSolicitud}</td>
                        <td class="whitespace-nowrap">${item.tipo_plazo}</td>
                        <td class="text-right whitespace-nowrap">${plazo}</td>
                        <td class="text-right whitespace-nowrap">${(tasa * 100).toFixed(2)}%</td>
                        <td class="text-right whitespace-nowrap">${item.apertura}</td>
                        <td class="text-right whitespace-nowrap">${(moraPorcentaje * 100).toFixed(2)}%</td>
                        <td class="text-right whitespace-nowrap">${formatCurrency(montoCuota).replace('DOP', '').trim()}</td>
                        <td class="text-right whitespace-nowrap">${formatCurrency(desembolso).replace('DOP', '').trim()}</td>
                        <td class="w-0 text-center"><a href="#" class="text-blue-500 hover:text-blue-700" title="Ver Préstamo"><i class="bi bi-eye"></i></a></td>
                    </tr>
                `;
                tableBody.insertAdjacentHTML('beforeend', row);
            });

            // ** 4. Rellenar la Sección de Resumen **
            document.getElementById('totalLoansCount').textContent = data.length;
            document.getElementById('totalDesembolsadoValue').textContent = formatCurrency(totalDesembolsado);
            document.getElementById('sumaCuotasValue').textContent = formatCurrency(sumaCuotas);
            document.getElementById('sumaPlazosValue').textContent = sumaPlazos.toFixed(0);
            document.getElementById('sumaTasasValue').textContent = (sumaTasas * 100).toFixed(2) + '%';
            document.getElementById('sumaMoraValue').textContent = (sumaMora * 100).toFixed(2) + '%';
            document.getElementById('sumaGastosCierreValue').textContent = formatCurrency(sumaGastosCierre);
        }
    </script>
